_files="wcnss.b00 wcnss.b01 wcnss.b02 wcnss.b04 wcnss.b06 wcnss.b07 wcnss.b08 wcnss.b09 wcnss.mdt"
_files1="WCNSS_cfg.dat WCNSS_qcom_cfg.ini WCNSS_qcom_wlan_nv.bin WCNSS_hw_wlan_nv.bin"

pkgname=firmware-huawei-y530
pkgver=1
pkgrel=1
pkgdesc="Firmware files for Huawei Ascend Y530"
url="https://github.com/postmarketOS"
arch="noarch"
license="proprietary"
depends="wcnss-wlan"
makedepends=""
install=""
subpackages=""
source="$pkgname-$pkgver-r$pkgrel.tar.gz::https://github.com/drebrez/vendor_huawei_y530/archive/master.tar.gz"
options="!strip !check !archcheck"

builddir="$srcdir/vendor_huawei_y530-master/wifi"

package() {
	mkdir -p $pkgdir/lib/firmware/postmarketos
	for _i in $_files; do
		install -D -m644 "$builddir/$_i" "$pkgdir/lib/firmware/postmarketos/$_i"
	done
	for _i in $_files1; do
		install -D -m644 "$builddir/wlan/prima/$_i" "$pkgdir/lib/firmware/postmarketos/wlan/prima/$_i"
	done
}
sha512sums="f412099bcaad52f488a8917edb7976a17301d266ddc112f3a8086a704620e5d0a52486f762e0dc9817b6664dacdfeef42517baf0e6bbec99b97f824b9c3585e6  firmware-huawei-y530-1-r1.tar.gz"
